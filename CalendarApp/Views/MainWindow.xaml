<Window x:Class="CalendarApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525" 
        Background="{DynamicResource MaterialDesignPaper}">
    <Border>
        <Grid>
        <Label Content="Hi"/>
            <StackPanel HorizontalAlignment="Right">
                <ToggleButton Style="{DynamicResource MaterialDesignSwitchToggleButton}" Command="{Binding ToggleThemeCommand}" Height="50" Width="50">
                    <materialDesign:PackIcon Kind="ThemeLightDark"/>

                </ToggleButton>
            </StackPanel>
        </Grid>
    </Border>
</Window>
