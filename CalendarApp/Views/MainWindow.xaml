<Window x:Class="CalendarApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525" >
    <Grid Background="{DynamicResource PrimaryBackgroundColor}">
        <ContentControl prism:RegionManager.RegionName="ContentRegion" />
        <Label Content="Hi"/>
        <StackPanel>
            <Button Content="Toggle Light" Command="{Binding ToggleLightThemeCommand}" Style="{DynamicResource MaterialDesignOutlinedDarkButton}" Height="20" Width="100"/>
            <Button Content="Toggle Dark" Command="{Binding ToggleDarkThemeCommand}" Height="20" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
